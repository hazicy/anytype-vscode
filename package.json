{
  "name": "anytype-vscode-extension",
  "displayName": "%displayName%",
  "description": "%description%",
  "author": "hazi",
  "publisher": "hazi",
  "version": "0.0.1",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hazicy/anytype-vscode"
  },
  "engines": {
    "vscode": "^1.107.1"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anytype.refresh",
        "title": "%command.anytype.refresh.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "anytype.openSettings",
        "title": "%command.anytype.openSettings.title%"
      },
      {
        "command": "anytype.switchSpace",
        "title": "%command.anytype.switchSpace.title%",
        "icon": "$(database)"
      },
      {
        "command": "anytype.createObject",
        "title": "%command.anytype.createObject.title%",
        "icon": "$(add)"
      },
      {
        "command": "anytype.deleteObject",
        "title": "%command.anytype.deleteObject.title%"
      },
      {
        "command": "anytype.archiveObject",
        "title": "%command.anytype.archiveObject.title%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "anytypeContainer",
          "title": "%view.anytypeContainer.title%",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "anytypeContainer": [
        {
          "id": "objectsView",
          "name": "%view.objectsView.name%",
          "icon": "$(add)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "anytype.createObject",
          "when": "view == objectsView",
          "group": "navigation"
        },
        {
          "command": "anytype.refresh",
          "when": "view == objectsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "anytype.deleteObject",
          "when": "view == objectsView && viewItem == blinkoObject",
          "group": "base@1"
        },
        {
          "command": "anytype.archiveObject",
          "when": "view == objectsView && viewItem == blinkoObject",
          "group": "base@2"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "anytype.api.baseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:31009",
          "description": "%configuration.api.baseUrl.description%"
        },
        "anytype.api.token": {
          "type": "string",
          "default": "",
          "description": "%configuration.api.token.description%"
        },
        "anytype.cache.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.cache.enabled.description%"
        },
        "anytype.cache.ttl": {
          "type": "number",
          "default": 300000,
          "description": "%configuration.cache.ttl.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "prettier": "3.7.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "markdownlint": "^0.40.0"
  }
}
